*filter

<% @allowed_customers.each do |name, dataHash| %><% if dataHash['public_ip'] %><% dataHash['public_ip'].each do |ip| %>
<% if @tcp %>
-A INPUT -p tcp -s <%= ip %> --dport <%= @tcp_port %> -j ACCEPT -m comment --comment "rsyslog <%= name %>"
<% end %>
<% if @udp %>
-A INPUT -p udp -s <%= ip %> --dport <%= @udp_port %> -j ACCEPT -m comment --comment "rsyslog <%= name %>"
<% end %>
<% end %><% end %><% end%>

COMMIT
